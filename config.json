{
  "editor": {
    "indent_width": 4,
    "show_line_numbers": true,
    "line_number_width": 4,
    "tab_size": 4,
    "auto_indent": true,
    "word_wrap": false,
    "cursor_style": "block"
  },
  "ui": {
    "theme": "Kanagawa",
    "directory_pane_width": 30,
    "status_bar_height": 1,
    "show_directory_pane": false,
    "directory_pane_floating": false,
    "editor_margins": {
      "vertical": 1,
      "horizontal": 1
    }
  },
  "key_bindings": {
    "normal": {
      "k": "move_up",
      "v": "mode_visual",
      "x": "delete_char",
      "p": "paste",
      "i": "mode_insert",
      "j": "move_down",
      "h": "move_left",
      ":": "mode_command",
      "l": "move_right",
      "a": "append",
      "u": "undo",
      "o": "open_new_line"
    }
  }
}
